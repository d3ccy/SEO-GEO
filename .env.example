# DataForSEO API credentials (required for keyword research)
DATAFORSEO_LOGIN=your_login_here
DATAFORSEO_PASSWORD=your_password_here

# Flask secret key â€” change this to a long random string in production
SECRET_KEY=change-me-to-a-random-string

